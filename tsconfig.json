{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2015",
		"rootDir": "src/",
		"outDir": "dist",
		"sourceMap": false,
		"declaration": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true
	},
	"include": [
		"src"
	]
}